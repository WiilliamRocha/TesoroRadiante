<div id="<%= dom_id product %>">
  <p>
    <strong>Color:</strong>
    <%= product.color %>
  </p>

  <p>
    <strong>Size:</strong>
    <%= product.size %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= product.amount %>
  </p>

  <p>
    <strong>Details:</strong>
    <%= product.details %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id_id %>
  </p>

</div>
